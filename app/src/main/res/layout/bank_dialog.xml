<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:background="@drawable/bank">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No Banks Account"
        android:textSize="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#05787F"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plese add a Bank Account"
        android:textColor="#397D7E"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >

    </TextView>


</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD A BANK ACCOUNT"
        android:textColor="#397D7E"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="#DAEEED"
        >

    </TextView>




</LinearLayout>
